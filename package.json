{
  "name": "poddy",
  "main": "dist/src/index.js",
  "type": "module",
  "scripts": {
    "build": "rm -rf dist && tsc && cross-env NODE_ENV=development node .",
    "start": "NODE_ENV=production node .",
    "prepare": "husky || prisma generate || true",
    "translate": "tsm languages/utils/interface.ts && biome check --write --no-errors-on-unmatched typings/language.d.ts",
    "db:start": "docker compose up -d postgres",
    "db:stop": "docker compose stop postgres",
    "db:reset": "docker compose down -v && docker compose up -d postgres",
    "db:migrate": "npx prisma migrate dev",
    "db:studio": "npx prisma studio"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc,prisma}": [
      "biome check --write --no-errors-on-unmatched",
      "prisma format"
    ],
    "languages/{en-US.json,interface.ts}": [
      "pnpm translate",
      "git add typings/language.d.ts"
    ]
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.989.0",
    "@aws-sdk/lib-storage": "^3.989.0",
    "@discordjs/core": "^2.4.0",
    "@discordjs/rest": "^2.6.0",
    "@discordjs/ws": "^2.0.4",
    "@dsnp/parquetjs": "^1.8.7",
    "@hono/node-server": "^1.19.9",
    "@prisma/adapter-pg": "^7.4.0",
    "@prisma/client": "^7.4.0",
    "@sapphire/bitfield": "^1.2.4",
    "@sapphire/snowflake": "^3.5.5",
    "@sentry/node": "10.38.0",
    "bufferutil": "^4.1.0",
    "colorette": "^2.0.20",
    "datadog-metrics": "^0.12.1",
    "discord-api-types": "^0.38.38",
    "dotenv": "^17.3.0",
    "dotenv-extended": "^2.9.0",
    "hono": "^4.11.9",
    "i18next": "^25.8.6",
    "i18next-intervalplural-postprocessor": "^3.0.0",
    "node-cron": "^4.2.1",
    "pg": "^8.18.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.15",
    "@types/node": "25.2.3",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.16.0",
    "cross-env": "^10.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prisma": "^7.4.0",
    "tsm": "^2.3.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@biomejs/biome",
      "@prisma/client",
      "@prisma/engines",
      "bufferutil",
      "esbuild",
      "prisma"
    ]
  },
  "packageManager": "pnpm@10.29.3"
}
